#!/usr/bin/bash
# File backup with sequential numbering

# Usage
if [ $# -gt 2 -o $# -lt 1 -o "$1" = "-h" -o "$1" = "--help" ] ; then
  echo "${0##*/} <file> <*dir> â€” file backup with sequential numbering"
  exit 1
fi

# File existent test
if [ ! -e "$1" ] ; then
  echo "Non-file: "$1""
  exit 1
fi

# Directory existent test
if   [ ! "$2" ]  ; then
  srcdir=.
elif [ -d "$2" ] ; then
  srcdir="$2"
else
  echo "Non-dir.: "$2""
  exit 1
fi
srcdir=$(echo "$srcdir%/}")  # rm trailing slash

# File: basename, noblename (minus ext. and num.), extension
fbnm=${1##*/}
fnbl=${fbnm%.*} ; fnbl=${fnbl%_[0-9][0-9]*}
fext=${fbnm##*.}
if [ "$fext" = "$fbnm" ]; then
  fext=""
else
  fext=".$fext"
fi

# File number determine from previous file
shopt -s nullglob
pnms=("$srcdir"/"$fnbl"_[0-9][0-9]*)
if [ "$pnms" ]; then
  # Previous file: name, basename, extension-less, number
  pnme="${pnms[-1]}"
  pbnm="${pnme##*/}"
  pexl="${pbnm%.*}"
  pnum="${pexl: -2}"
  fnum=$(printf "%02u" $((10#$pnum + 1)))
else
  fnum=00
fi

cp -aiv "$1" "$srcdir"/"$fnbl"_"$fnum""$fext"
